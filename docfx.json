{
  "build": {
    "content": [
      {
        "files": [
        "articles/**.md", 
        "articles/**.yml",
        "toc.yml", 
        "*.md"
      ]
      },
      {
        "files": [
          "index.md"
        ],
        "src": "."
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "SupplyChain365",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico"
    },
    "template": [
      "default",
      "templates/custom"
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "html": true
    }
  }
}